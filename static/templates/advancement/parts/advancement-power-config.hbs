<div class="form-group">
    <label>{{ localize "SW5E.AbilityModifier" }}</label>
    <div class="form-fields">
        <multi-select name="configuration.power.ability">
            {{#each abilities}}
            <option value="{{ @key }}" {{ selected }}>{{ label }}</option>
            {{/each}}
        </multi-select>
    </div>
</div>

<div class="form-group">
    <label>{{ localize "SW5E.PowerPreparationMode" }}</label>
    <div class="form-fields">
        <select name="configuration.power.preparation">
            {{ selectOptions CONFIG.powerPreparationModes selected=configuration.power.preparation
            labelAttr="label" blank="—" }}
        </select>
    </div>
</div>

<div class="form-group">
    <label>{{ localize "SW5E.LimitedUses" }}</label>
    <div class="form-fields">
        <input type="text" name="configuration.power.uses.max" value="{{ configuration.power.uses.max }}"
            data-formula-editor>
        <select name="configuration.power.uses.per">
            {{ selectOptions CONFIG.limitedUsePeriods selected=configuration.power.uses.per
            labelAttr="label" blank="—" }}
        </select>
    </div>
</div>
