<form autocomplete="off">
    <h3 class="form-header flexrow">
        {{ localize "SW5E.Summoning.Profile.LabelPl" }}
        <button type="button" class="unbutton" data-action="add-profile">
            <i class="fa-solid fa-plus" aria-hidden="true"></i>
            {{ localize 'SW5E.Summoning.Action.Add' }}
        </a>
    </h3>
    <ul class="profiles flexcol">
        {{#each profiles}}
        <li class="profile" data-profile-id="{{ id }}">
            <div class="details flexrow">
                {{#if document}}
                {{{ sw5e-linkForUuid uuid }}}
                {{else}}
                <div class="drop-area">
                    {{localize "SW5E.Summoning.DropHint"}}
                </div>
                {{/if}}
                <input type="text" name="profiles.{{ id }}.name" value="{{ name }}" aria-label="{{ localize 'Name' }}"
                       placeholder="{{#if document}}{{ document.name }}{{else}}
                       {{~ localize 'SW5E.Summoning.DisplayName' }}{{/if}}">
                <button type="button" class="unbutton" data-action="delete-profile"
                        data-tooltip="SW5E.Summoning.Action.Remove"
                        aria-label="{{ localize 'SW5E.Summoning.Action.Remove' }}">
                    <i class="fa-solid fa-trash fa-fw" inert></i>
                </button>
            </div>
            <input type="hidden" name="profiles.{{ id }}._id" value="{{ id }}">
            <input type="hidden" name="profiles.{{ id }}.uuid" value="{{ uuid }}">
        </li>
        {{else}}
        <li class="empty">{{ localize "SW5E.Summoning.Profile.Empty" }}</li>
        {{/each}}
    </ul>

    <h3 class="form-header">{{ localize "SW5E.Summoning.CreatureChanges.Label" }}</h3>
    <p class="hint">{{ localize "SW5E.Summoning.CreatureChanges.Hint" }}</p>
    <div class="form-group">
        <label>{{ localize "SW5E.Summoning.Match.Proficiency.Label" }}</label>
        <input type="checkbox" name="match.proficiency" {{ checked summons.match.proficiency }}>
        <p class="hint">{{ localize "SW5E.Summoning.Match.Proficiency.Hint" }}</p>
    </div>
    <div class="form-group">
        <label>{{ localize "SW5E.Summoning.Bonuses.ArmorClass.Label" }}</label>
        <input type="text" name="bonuses.ac" value="{{ summons.bonuses.ac }}">
        <p class="hint">{{ localize "SW5E.Summoning.Bonuses.ArmorClass.Hint" }}</p>
    </div>
    <div class="form-group">
        <label>{{ localize "SW5E.Summoning.Bonuses.HitPoints.Label" }}</label>
        <input type="text" name="bonuses.hp" value="{{ summons.bonuses.hp }}">
        <p class="hint">{{ localize "SW5E.Summoning.Bonuses.HitPoints.Hint" }}</p>
    </div>

    <h3 class="form-header">{{ localize "SW5E.Summoning.ItemChanges.Label" }}</h3>
    <p class="hint">{{ localize "SW5E.Summoning.ItemChanges.Hint" }}</p>
    <div class="form-group">
        <label>{{ localize "SW5E.Summoning.Match.Attacks.Label" }}</label>
        <input type="checkbox" name="match.attacks" {{ checked summons.match.attacks }}>
        <p class="hint">{{ localize "SW5E.Summoning.Match.Attacks.Hint" }}</p>
    </div>
    <div class="form-group">
        <label>{{ localize "SW5E.Summoning.Match.Saves.Label" }}</label>
        <input type="checkbox" name="match.saves" {{ checked summons.match.saves }}>
        <p class="hint">{{ localize "SW5E.Summoning.Match.Saves.Hint" }}</p>
    </div>
    <div class="form-group">
        <label>{{ localize "SW5E.Summoning.Bonuses.Attack.Label" }}</label>
        <input type="text" name="bonuses.attackDamage" value="{{ summons.bonuses.attackDamage }}">
        <p class="hint">{{ localize "SW5E.Summoning.Bonuses.Attack.Hint" }}</p>
    </div>
    <div class="form-group">
        <label>{{ localize "SW5E.Summoning.Bonuses.Saves.Label" }}</label>
        <input type="text" name="bonuses.saveDamage" value="{{ summons.bonuses.saveDamage }}">
        <p class="hint">{{ localize "SW5E.Summoning.Bonuses.Saves.Hint" }}</p>
    </div>
    <div class="form-group">
        <label>{{ localize "SW5E.Summoning.Bonuses.Healing.Label" }}</label>
        <input type="text" name="bonuses.healing" value="{{ summons.bonuses.healing }}">
        <p class="hint">{{ localize "SW5E.Summoning.Bonuses.Healing.Hint" }}</p>
    </div>
</form>
