<form class="{{cssClass}} flexcol" autocomplete="off">

    {{!-- Item Sheet Header --}}
    <header class="sheet-header flexrow">
        <div class="composed-icon profile">
            {{#if item.iconBackground}}<img class="profile background" src="{{item.iconBackground}}" />{{/if}}
            <img class="profile" src="{{item.img}}" data-tooltip="{{item.name}}" data-edit="img">
            {{#if item.iconForeground}}<img class="profile foreground" src="{{item.iconForeground}}" />{{/if}}
        </div>

        <div class="header-details flexrow">
            <h1 class="charname">
                {{#if system.identified}}
                <input name="name" type="text" value="{{item.name}}" placeholder="{{ localize 'SW5E.ItemName' }}">
                {{else}}
                <input name="system.unidentified.name" type="text" value="{{system.unidentified.name}}"
                    placeholder="{{ localize 'SW5E.NameUnidentified' }}">
                {{/if}}
            </h1>

            <div class="item-subtitle">
                <h4 class="item-type">{{itemType}}</h4>
                <label class="identified">
                    <input type="checkbox" name="system.identified" {{checked system.identified}}>
                    {{#if system.identified}}
                    {{ localize "SW5E.Identified" }}
                    {{#if editable}}<i class="fa-solid fa-toggle-on"></i>{{/if}}
                    {{else}}
                    {{ localize "SW5E.Unidentified.Title" }}
                    {{#if editable}}<i class="fa-solid fa-toggle-off"></i>{{/if}}
                    {{/if}}
                </label>
                <span class="item-status">{{itemStatus}}</span>
            </div>

            <ul class="summary flexrow">
                <li style="flex-basis: 80px;">
                    {{ localize (lookup config.modificationTypes system.modificationType) }}
                </li>
                <li>
                    {{#if concealDetails}}
                    <span>{{ localize "SW5E.Unidentified.Title" }}</span>
                    {{else}}
                    <select name="system.rarity" {{~#if concealDetails}} inert{{/if}}>
                        {{selectOptions config.itemRarity selected=system.rarity blank=""}}
                    </select>
                    {{/if}}
                </li>
                <li>
                    {{> "sw5e.item-source"}}
                </li>
            </ul>
        </div>
    </header>

    {{!-- Item Sheet Navigation --}}
    <nav class="sheet-navigation tabs" data-group="primary">
        <a class="item active" data-tab="description">{{ localize "SW5E.Description" }}</a>
        <a class="item" data-tab="details">{{ localize "SW5E.Details" }}</a>
        <a class="item" data-tab="effects">{{ localize "SW5E.Effects" }}</a>
    </nav>

    {{!-- Item Sheet Body --}}
    <section class="sheet-body">

        {{!-- Description Tab --}}
        {{> "sw5e.item-description" }}

        {{!-- Details Tab --}}
        <div class="tab details" data-group="primary" data-tab="details">
            {{#sw5e-concealSection concealDetails}}

            <h3 class="form-header">{{ localize "SW5E.ItemModificationDetails" }}</h3>

            {{!-- Modification Type --}}
            <div class="form-group">
                <label>{{ localize "SW5E.ItemModificationType" }}</label>
                <select name="system.modificationType">
                    {{ selectOptions config.modificationTypes selected=system.modificationType }}
                </select>
            </div>

            {{!-- Modification Slot --}}
            <div class="form-group">
                {{#if usesSlot}}
                <label>{{ localize "SW5E.ItemModificationSlot" }}</label>
                <select name="system.modificationSlot">
                    {{#with (lookup config.modificationSlots system.modificationType) as |modSlots| }}
                    {{ selectOptions modSlots selected=../system.modificationSlot }}
                    {{/with}}
                </select>
                {{/if}}
            </div>

            {{!-- Weapon/Equipment Properties --}}
            {{#if propertiesList}}
            <h3 class="form-header">{{ localize "SW5E.ItemModificationPropertyPl" }}</h3>
            <div class="form-group stacked item-properties">
                <label>{{ localize "SW5E.ItemProperties" }}</label>
                {{#each properties}}
                <label class="checkbox">
                    <input type="checkbox" name="system.properties.{{ @key }}" {{ checked selected }}>
                    {{ label }}
                </label>
                {{/each}}
            </div>
            {{/if}}

            {{#if isWpnMod}}
            {{!-- Attack Roll Bonus --}}
            <div class="form-group">
                <label>{{ localize "SW5E.ItemAttackBonus" }}</label>
                <div class="form-fields">
                    <input type="text" name="system.attackBonus" value="{{system.attackBonus}}" />
                </div>
            </div>

            {{!-- Damage Formula --}}
            <h4 class="damage-header">
                {{ localize "SW5E.Damage" }} {{ localize "SW5E.Formula" }}
                <a class="damage-control add-damage"><i class="fas fa-plus"></i></a>
            </h4>
            <ol class="damage-parts form-group">
                {{#each system.damage.parts as |part i| }}
                <li class="damage-part flexrow" data-damage-part="{{i}}">
                    <input type="text" name="system.damage.parts.{{i}}.0" value="{{lookup this " 0"}}" />
                    <select name="system.damage.parts.{{i}}.1">
                        {{#select (lookup this "1") }}
                        <option value="">{{ localize "SW5E.None" }}</option>
                        {{#each ../config.damageTypes as |name type|}}
                        <option value="{{type}}">{{name}}</option>
                        {{/each}}
                        {{#each ../config.healingTypes as |name type|}}
                        <option value="{{type}}">{{name}}</option>
                        {{/each}}
                        {{/select}}
                    </select>
                    <a class="damage-control delete-damage"><i class="fas fa-minus"></i></a>
                </li>
                {{/each}}
            </ol>
            {{/if}}

            {{#if isEquipMod}}
            {{!-- Armor Class --}}
            <div class="form-group">
                <label>{{ localize "SW5E.ArmorClassBonus" }}</label>
                <div class="form-fields">
                    {{ numberInput source.armor.value name="system.armor.value" step="1" }}
                </div>
            </div>

            {{#if properties.mgc.selected}}
            <div class="form-group">
                <label>{{ localize "SW5E.MagicalBonus" }}</label>
                <div class="form-fields">
                    {{ numberInput system.armor.magicalBonus name="system.armor.magicalBonus"
                    min="0" step="1" placeholder="0" }}
                </div>
            </div>
            {{/if}}
            {{/if}}

            {{#if hasDexModifier}}
            {{!-- Dexterity Modifier --}}
            <div class="form-group">
                <label>{{ localize "SW5E.ItemEquipmentDexMod" }}</label>
                <div class="form-fields">
                    {{numberInput system.armor.dex name="system.armor.dex" placeholder=(localize "SW5E.Unlimited")}}
                </div>
            </div>
            {{/if}}

            {{!-- Required Strength --}}
            <div class="form-group">
                <label>{{ localize "SW5E.ItemRequiredStr" }}</label>
                <div class="form-fields">
                    <input type="text" name="system.strength" value="{{system.strength}}" data-dtype="Number"
                        placeholder="{{ localize 'SW5E.Unchanged' }}" />
                </div>
            </div>
        </div>

        {{!-- Effects Tab --}}
        <div class="tab effects flexcol" data-group="primary" data-tab="effects">
            {{> "sw5e.active-effects"}}
        </div>
    </section>
</form>
