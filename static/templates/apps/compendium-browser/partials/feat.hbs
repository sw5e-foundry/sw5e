<li class="item flexrow" data-entry-uuid="{{entry.uuid}}" data-type="Item">
    <div class="image">
        <img class="" src="{{entry.img}}" title="{{entry.name}}" width="32" height="32" loading="lazy" />
    </div>
    <div class="name">
        <a class="item-link">{{entry.name}}</a>
    </div>
    <div class="category tags">
        {{#unless (eq entry.category "")}}
        <span class="{{entry.category}}">
            {{lookup (lookup filterData.checkboxes.category.options entry.category) "label"}}
        </span>
        {{/unless}}
    </div>
    <div class="subcategory tags">
        {{#unless (eq entry.subcategory "")}}
        <span class="{{entry.subcategory}}">
            {{lookup (lookup filterData.checkboxes.subcategory.options entry.subcategory) "label"}}
        </span>
        {{/unless}}
    </div>
    <div class="level">
        <span title="Feat level">{{entry.level}}</span>
    </div>
</li>
