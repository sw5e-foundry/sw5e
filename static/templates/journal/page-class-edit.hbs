<form class="{{ cssClass }} flexcol drop-target" autocomplete="off">
    {{> journalEntryPageHeader }}

    <div class="form-group">
        <label>{{ localize "JOURNALENTRYPAGE.SW5E.Class.Item" }}</label>
        <div class="form-fields">
            <ol class="items-list">
                {{#if document.system.item}}
                <li class="item flexrow" data-item-uuid="{{ document.system.item }}" data-item-type="linked">
                    <div class="item-name">{{{ sw5e-linkForUuid document.system.item }}}</div>
                    <div class="item-controls flexrow">
                        <a class="item-control item-delete" data-tooltip="SW5E.ItemDelete"
                           aria-label="{{ localize 'SW5E.ItemDelete' }}">
                            <i class="fa-solid fa-trash" inert></i>
                        </a>
                    </div>
                </li>
                {{else}}
                <li class="item flexrow">{{ localize "JOURNALENTRYPAGE.SW5E.Class.ItemHint" }}</li>
                {{/if}}
            </ol>
        </div>
    </div>

    <div class="form-group">
        <label>{{ localize "JOURNALENTRYPAGE.SW5E.Class.Description" }}</label>
        <div class="form-fields">
            <button class="launch-text-editor" data-target="system.description.value">
                <i class="fas fa-edit" inert></i> {{ localize "JOURNALENTRYPAGE.SW5E.EditDescription" }}
            </button>
        </div>
        <p class="hint">{{ localize "JOURNALENTRYPAGE.SW5E.Class.DescriptionHint" }}</p>
    </div>

    <div class="form-group">
        <label>{{ localize "JOURNALENTRYPAGE.SW5E.Class.AdditionalHitPoints" }}</label>
        <div class="form-fields">
            <button class="launch-text-editor" data-target="system.description.additionalHitPoints">
                <i class="fas fa-edit" inert></i> {{ localize "JOURNALENTRYPAGE.SW5E.EditDescription" }}
            </button>
        </div>
        <p class="hint">{{ localize "JOURNALENTRYPAGE.SW5E.Class.AdditionalHitPointsHint" }}</p>
    </div>

    <div class="form-group">
        <label>{{ localize "JOURNALENTRYPAGE.SW5E.Class.AdditionalTraits" }}</label>
        <div class="form-fields">
            <button class="launch-text-editor" data-target="system.description.additionalTraits">
                <i class="fas fa-edit" inert></i> {{ localize "JOURNALENTRYPAGE.SW5E.EditDescription" }}
            </button>
        </div>
        <p class="hint">{{ localize "JOURNALENTRYPAGE.SW5E.Class.AdditionalTraitsHint" }}</p>
    </div>

    <div class="form-group">
        <label>{{ localize "JOURNALENTRYPAGE.SW5E.Class.AdditionalEquipment" }}</label>
        <div class="form-fields">
            <button class="launch-text-editor" data-target="system.description.additionalEquipment">
                <i class="fas fa-edit" inert></i> {{ localize "JOURNALENTRYPAGE.SW5E.EditDescription" }}
            </button>
        </div>
        <p class="hint">{{ localize "JOURNALENTRYPAGE.SW5E.Class.AdditionalEquipmentHint" }}</p>
    </div>

    <div class="form-group">
        <label>{{ localize "JOURNALENTRYPAGE.SW5E.Class.ArchetypeHeader" }}</label>
        <div class="form-fields">
            <input type="text" name="system.archetypeHeader" value="{{system.archetypeHeader}}">
        </div>
    </div>

    <div class="form-group">
        <label>{{ localize "JOURNALENTRYPAGE.SW5E.Class.ArchetypeDescription" }}</label>
        <div class="form-fields">
            <button class="launch-text-editor" data-target="system.description.archetype">
                <i class="fas fa-edit" inert></i> {{ localize "JOURNALENTRYPAGE.SW5E.EditDescription" }}
            </button>
        </div>
        <p class="hint">{{ localize "JOURNALENTRYPAGE.SW5E.Class.ArchetypeDescriptionHint" }}</p>
    </div>

    <div class="form-group">
        <label>{{ localize "JOURNALENTRYPAGE.SW5E.Class.ArchetypeItems" }}</label>
        <div class="form-fields">
            <ol class="items-list">
                {{#each archetypes}}
                <li class="item flexrow" data-item-uuid="{{this.document.uuid}}" data-item-type="archetype">
                    <div class="item-name">{{{ sw5e-linkForUuid this.document.uuid }}}</div>
                    <div class="item-controls flexrow">
                        <a class="item-control item-delete" data-tooltip="SW5E.ItemDelete"
                           aria-label="{{ localize 'SW5E.ItemDelete' }}">
                            <i class="fas fa-trash" inert></i>
                        </a>
                    </div>
                </li>
                {{else}}
                <li class="item flexrow">{{ localize "JOURNALENTRYPAGE.SW5E.Class.ArchetypeHint" }}</li>
                {{/each}}
            </ol>
        </div>
    </div>
</form>
