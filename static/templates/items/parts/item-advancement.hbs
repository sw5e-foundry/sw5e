<div class="tab details advancement" data-group="primary" data-tab="advancement">
    <ol class="items-list">
        {{#if editable}}
            <li class="items-header flexrow main-controls">
                <div class="item-controls flexrow configuration-mode-control">
                    {{#if isEmbedded}}
                        {{#if advancementEditable}}
                            <a class="item-control" data-action="toggle-configuration"
                                 data-tooltip="SW5E.AdvancementConfigurationActionDisable">
                                <i class="fas fa-lock-open"></i> {{localize "SW5E.AdvancementConfigurationModeEnabled"}}
                            </a>
                        {{else}}
                            <a class="item-control" data-action="toggle-configuration"
                                 data-tooltip="SW5E.AdvancementConfigurationActionEnable">
                                <i class="fas fa-lock"></i> {{localize "SW5E.AdvancementConfigurationModeDisabled"}}
                            </a>
                        {{/if}}
                    {{/if}}
                </div>
                {{#if advancementEditable}}
                    <div class="item-controls flexrow add-button">
                        <a class="item-control" data-action="add" data-tooltip="SW5E.AdvancementControlCreate">
                            <i class="fas fa-plus"></i>
                        </a>
                    </div>
                {{/if}}
            </li>
        {{/if}}

        {{#each advancement as |data level|}}
            <li class="items-header flexrow" data-level="{{level}}">
                <h3 class="item-name flexrow">
                    {{#if (eq level "unconfigured")}}
                        {{localize "SW5E.AdvancementLevelNoneHeader"}}
                    {{else if (eq @root.item.type "starshipsize")}}
                        {{localize "SW5E.AdvancementLevelHeaderStarship" tier=level}}
                    {{else if (eq level "0")}}
                        {{localize "SW5E.AdvancementLevelAnyHeader"}}
                    {{else}}
                        {{localize "SW5E.AdvancementLevelHeader" level=level}}
                    {{/if}}
                </h3>

                {{#if (and @root.editable data.configured (ne level "unconfigured"))}}
                    <div>
                        <a class="item-control" data-action="modify-choices">{{localize "SW5E.AdvancementModifyChoices"}}</a>
                    </div>
                {{/if}}

                {{#if (eq data.configured "full")}}
                    <div class="item-checkmark" data-tooltip="SW5E.AdvancementConfiguredComplete">
                        <i class="fas fa-check-circle"></i>
                    </div>
                {{else if (eq data.configured "partial")}}
                    <div class="item-warning" data-tooltip="SW5E.AdvancementConfiguredIncomplete">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                {{/if}}
            </li>
            <ol class="item-list">
                {{#each data.items}}
                    <li class="advancement-item item flexrow" data-id="{{this.id}}">
                        <div class="item-name flexrow">
                            <div class="item-image" style="background-image: url('{{this.icon}}')"></div>
                            <h4>{{{this.title}}}</h4>
                        </div>
                        {{#if (or @root.advancementEditable (not @root.isEmbedded))}}
                            <div class="flexrow">
                                {{#if (eq this.classRestriction "primary")}}
                                    {{localize "SW5E.AdvancementClassRestrictionPrimary"}}
                                {{else if (eq this.classRestriction "secondary")}}
                                    {{localize "SW5E.AdvancementClassRestrictionSecondary"}}
                                {{/if}}
                            </div>
                        {{/if}}
                        {{#if @root.advancementEditable}}
                            <div class="item-controls flexrow">
                                <a class="item-control" data-action="edit" data-tooltip="SW5E.AdvancementControlEdit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="item-control" data-action="delete" data-tooltip="SW5E.AdvancementControlDelete">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        {{/if}}
                        {{#if this.summary}}
                            <div class="item-summary">
                                {{{this.summary}}}
                            </div>
                        {{/if}}
                    </li>
                {{/each}}
            </ol>
        {{/each}}
    </ol>
</div>